<div class="media-grid__wrapper">
  <figure class="media-grid__item {{ large ? 'media-grid__item--large' : 'media-grid__item--small' }}">
    {% if videoUrl %}
      <div class="media media--video">
        <video class="media__object" src="{{ videoUrl }}#t=0.1" preload="metadata" playsinline muted></video>
        <button type="button" class="media__play" aria-label="Play video">
          <span class="media__play-icon" aria-hidden="true">
            <svg class="media__progress" width="100" height="100" viewBox="0 0 100 100" role="presentation">
              <circle class="media__progress-circle" cx="50" cy="50" r="45" />
            </svg>
          </span>
        </button>
      </div>
    {% endif %}

    {% if imageUrl %}
      <div class="media media--image">
        <img src="{{ imageUrl }}" alt="{{ name }}" width="{{ large ? '1200' : '320' }}" height="{{ large ? '750' : '320' }}" loading="lazy" />
      </div>
    {% endif %}

    <figcaption class="media-grid__caption js-scroll-reveal">
      {{ name }} ‚è§{% if link %}
        <a href="{{ link }}" target="_blank" rel="noopener noreferrer">
          <span>{{ label }}</span>
          <img src="img/icons/arrow-external.svg" alt="" class="icon" />
        </a>
      {% else %}
        {{ label }}
      {% endif %}
      {% if description %}
        <br />{{ description }}
      {% endif %}
    </figcaption>
  </figure>
</div>
